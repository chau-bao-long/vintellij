<idea-plugin>
    <id>com.dinhhuy258.vintellij</id>
    <name>vintellij</name>
    <vendor email="huy.duongdinh@gmail.com" url="https://github.com/dinhhuy258">
        Huy Duong
    </vendor>

    <description>
        The intellij plugin which is used as a language server protocol
    </description>

    <!-- Enable plugin in all products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <application-components>
        <component>
            <implementation-class>com.dinhhuy258.vintellij.components.VIApplicationComponent</implementation-class>
        </component>
    </application-components>
</idea-plugin>
