<idea-plugin>
    <id>com.dinhhuy258.plugins.vim-intellij</id>
    <name>Vim intellij</name>
    <vendor email="huy.duongdinh@gmail.com" url="https://github.com/dinhhuy258">
        dinhhuy258
    </vendor>

    <description>
        The intellij plugin which is used as a language server protocol
    </description>

    <!-- Enable plugin in all products -->
    <depends>com.intellij.modules.lang</depends>
    
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>
    <project-components>
        <component>
            <implementation-class>com.dinhhuy258.plugins.components.VIProjectComponent</implementation-class>
        </component>
    </project-components>
</idea-plugin>